{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [

      {
        "include": "../public/**/*",
        "outDir": "dist" 
      },

      {
        "include": "views/**/*",
        "outDir": "dist" 
      },

      {
        "include": "mail/templates/**/*",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}